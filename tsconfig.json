{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "lib": [ "es2015", "dom", "es2016" ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components/*": ["./src/components/*"],
      "config/*": ["./src/config/*"],
      "controllers": ["./src/controllers"],
      "controllers/*": ["./src/controllers/*"],
      "images/*": ["./src/images/*"],
      "models/*": ["./src/models/*"],
      "shared/*": ["./shared/*"],
      "styles/*": ["./src/styles/*"],
      "styles": ["./src/styles"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "dist/**/*",
    "public/**/*",
    "lib/**/*",
    "node_modules"
  ]
}